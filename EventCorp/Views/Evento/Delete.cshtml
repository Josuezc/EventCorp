@model EventCorp.Models.Evento

@{
    ViewData["Title"] = "Eliminar Evento";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="text-danger mb-4">¿Está seguro que desea eliminar este evento?</h2>

<div class="card shadow-sm border-0 mb-4">
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-4 fw-semibold">Título</dt>
            <dd class="col-sm-8">@Model.Titulo</dd>

            <dt class="col-sm-4 fw-semibold">Descripción</dt>
            <dd class="col-sm-8">@Model.Descripcion</dd>

            <dt class="col-sm-4 fw-semibold">Categoría</dt>
            <dd class="col-sm-8">@Model.Categoria?.Nombre</dd>

            <dt class="col-sm-4 fw-semibold">Fecha</dt>
            <dd class="col-sm-8">@Model.Fecha.ToString("dd/MM/yyyy")</dd>

            <dt class="col-sm-4 fw-semibold">Hora</dt>
            <dd class="col-sm-8">@Model.Hora.ToString(@"hh\:mm")</dd>

            <dt class="col-sm-4 fw-semibold">Duración (min)</dt>
            <dd class="col-sm-8">@Model.DuracionMinutos</dd>

            <dt class="col-sm-4 fw-semibold">Ubicación</dt>
            <dd class="col-sm-8">@Model.Ubicacion</dd>

            <dt class="col-sm-4 fw-semibold">Cupo Máximo</dt>
            <dd class="col-sm-8">@Model.CupoMaximo</dd>

            <dt class="col-sm-4 fw-semibold">Fecha de Registro</dt>
            <dd class="col-sm-8">@Model.FechaRegistro?.ToString("dd/MM/yyyy HH:mm")</dd>

            <dt class="col-sm-4 fw-semibold">Usuario que Registró</dt>
            <dd class="col-sm-8">@Model.UsuarioRegistro?.UserName</dd>
        </dl>
    </div>
</div>

<form asp-action="Delete">
    <input type="hidden" asp-for="Id" />
    <div class="d-flex justify-content-between">
        <a asp-action="Index" class="btn btn-secondary">
            <i class="bi bi-arrow-left-circle"></i> Cancelar
        </a>
        <input type="submit" value="Eliminar" class="btn btn-danger" onclick="return confirm('¿Está completamente seguro? Esta acción no se puede deshacer.');" />
    </div>
</form>