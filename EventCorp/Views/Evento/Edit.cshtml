@model EventCorp.Models.Evento

@{
    ViewData["Title"] = "Editar Evento";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="text-primary text-center mb-4">Editar Evento</h2>

<div class="row">
    <div class="col-md-6 offset-md-3 offset-md-3">
        <form asp-action="Edit" class="border p-4 shadow-sm rounded bg-light">
            <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

            <input type="hidden" asp-for="Id" />

            <div class="mb-3">
                <label asp-for="Titulo" class="form-label fw-semibold"></label>
                <input asp-for="Titulo" class="form-control" />
                <span asp-validation-for="Titulo" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Descripcion" class="form-label fw-semibold"></label>
                <textarea asp-for="Descripcion" class="form-control" rows="3"></textarea>
                <span asp-validation-for="Descripcion" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="CategoriaId" class="form-label fw-semibold"></label>
                <select asp-for="CategoriaId" class="form-select" asp-items="ViewBag.CategoriaId"></select>
                <span asp-validation-for="CategoriaId" class="text-danger"></span>
            </div>

            <div class="row">
                <div class="col-md-6 offset-md-3 offset-md-3 mb-3">
                    <label asp-for="Fecha" class="form-label fw-semibold"></label>
                    <input asp-for="Fecha" class="form-control" type="date" />
                    <span asp-validation-for="Fecha" class="text-danger"></span>
                </div>
                <div class="col-md-6 offset-md-3 offset-md-3 mb-3">
                    <label asp-for="Hora" class="form-label fw-semibold"></label>
                    <input asp-for="Hora" class="form-control" type="time" />
                    <span asp-validation-for="Hora" class="text-danger"></span>
                </div>
            </div>

            <div class="mb-3">
                <label asp-for="DuracionMinutos" class="form-label fw-semibold"></label>
                <input asp-for="DuracionMinutos" class="form-control" />
                <span asp-validation-for="DuracionMinutos" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Ubicacion" class="form-label fw-semibold"></label>
                <input asp-for="Ubicacion" class="form-control" />
                <span asp-validation-for="Ubicacion" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="CupoMaximo" class="form-label fw-semibold"></label>
                <input asp-for="CupoMaximo" class="form-control" />
                <span asp-validation-for="CupoMaximo" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="FechaRegistro" class="form-label fw-semibold"></label>
                <input asp-for="FechaRegistro" class="form-control" readonly />
            </div>

            <div class="mb-3">
                <label asp-for="UsuarioRegistroId" class="form-label fw-semibold"></label>
                <input asp-for="UsuarioRegistroId" class="form-control" readonly />
            </div>

            <div class="d-flex justify-content-between">
                <a asp-action="Index" class="btn btn-secondary">Volver al listado</a>
                <input type="submit" value="Guardar cambios" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}