@model EventCorp.Models.Evento

@{
    ViewData["Title"] = "Detalles del Evento";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="text-primary text-center mb-4">Detalles del Evento</h2>

<div class="row justify-content-center">
    <div class="col-md-8 col-lg-6">
        <div class="card shadow-sm border-0">
            <div class="card-body">
                <dl class="row">
                    <dt class="col-sm-5 fw-semibold">Título</dt>
                    <dd class="col-sm-7">@Model.Titulo</dd>

                    <dt class="col-sm-5 fw-semibold">Descripción</dt>
                    <dd class="col-sm-7">@Model.Descripcion</dd>

                    <dt class="col-sm-5 fw-semibold">Categoría</dt>
                    <dd class="col-sm-7">@Model.Categoria?.Nombre</dd>

                    <dt class="col-sm-5 fw-semibold">Fecha</dt>
                    <dd class="col-sm-7">@Model.Fecha.ToString("dd/MM/yyyy")</dd>

                    <dt class="col-sm-5 fw-semibold">Hora</dt>
                    <dd class="col-sm-7">@Model.Hora.ToString(@"hh\:mm")</dd>

                    <dt class="col-sm-5 fw-semibold">Duración (min)</dt>
                    <dd class="col-sm-7">@Model.DuracionMinutos</dd>

                    <dt class="col-sm-5 fw-semibold">Ubicación</dt>
                    <dd class="col-sm-7">@Model.Ubicacion</dd>

                    <dt class="col-sm-5 fw-semibold">Cupo Máximo</dt>
                    <dd class="col-sm-7">@Model.CupoMaximo</dd>

                    <dt class="col-sm-5 fw-semibold">Fecha de Registro</dt>
                    <dd class="col-sm-7">@Model.FechaRegistro?.ToString("dd/MM/yyyy HH:mm")</dd>

                    <dt class="col-sm-5 fw-semibold">Usuario que Registró</dt>
                    <dd class="col-sm-7">@Model.UsuarioRegistro?.UserName.</dd>
                </dl>
            </div>
        </div>

        <div class="mt-4 text-center">
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning me-2">
                <i class="bi bi-pencil-square"></i> Editar
            </a>
            <a asp-action="Index" class="btn btn-secondary">
                <i class="bi bi-arrow-left-circle"></i> Volver al listado
            </a>
        </div>
    </div>
</div>