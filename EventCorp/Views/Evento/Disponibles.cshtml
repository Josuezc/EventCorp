@model IEnumerable<EventCorp.Models.Evento>
@{
    ViewData["Title"] = "Eventos disponibles";
    var eventosInscritos = ViewBag.EventosInscritos as List<int> ?? new();
}


<div class="container py-4">
    <h2 class="mb-4 fw-bold">Eventos disponibles</h2>

    @if (!Model.Any())
    {
        <div class="alert alert-info">Actualmente no hay eventos disponibles.</div>
    }
    else
    {
        <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
            @foreach (var evento in Model)
            {
                var fechaHora = evento.Fecha.Add(evento.Hora);
                <div class="col">
                    <div class="card h-100 shadow-sm border-0">
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title text-primary">@evento.Titulo</h5>
                            <p class="card-text text-muted">@evento.Categoria?.Nombre</p>
                            <p class="card-text small">
                                <strong>Fecha:</strong> @evento.Fecha.ToString("dd/MM/yyyy")<br />
                                <strong>Hora:</strong> @evento.Hora.ToString(@"hh\:mm")<br />
                                <strong>Duración:</strong> @evento.DuracionMinutos min<br />
                                <strong>Ubicación:</strong> @evento.Ubicacion<br />
                                <strong>Cupo máximo:</strong> @evento.CupoMaximo
                            </p>
                            @if (eventosInscritos.Contains(evento.Id))
                            {
                                <button class="btn btn-outline-secondary w-100" disabled>
                                    <i class="bi bi-check-circle me-1"></i> Ya inscrito
                                </button>
                            }
                            else
                            {
                                <form asp-action="Registrar" asp-controller="Inscripciones" method="post" class="mt-auto">
                                    <input type="hidden" name="eventoId" value="@evento.Id" />
                                    <button type="submit" class="btn btn-outline-primary w-100">
                                        <i class="bi bi-check2-circle me-1"></i> Inscribirse
                                    </button>
                                </form>
                            }
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>
