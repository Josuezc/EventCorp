@model IEnumerable<EventCorp.Models.Categoria>
@{
    ViewData["Title"] = "Categorías";
}

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold">Gestión de Categorías</h2>
        <a asp-action="Create" class="btn btn-outline-primary">
            <i class="bi bi-plus-circle me-1"></i> Nueva categoría
        </a>
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-info">No hay categorías registradas por el momento.</div>
    }
    else
    {
        <div class="card shadow-sm">
            <div class="table-responsive">
                <table class="table table-hover table-bordered align-middle mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>Nombre</th>
                            <th>Estado</th>
                            <th>Registrado por</th>
                            <th>Fecha</th>
                            <th class="text-end">Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Nombre</td>
                                <td>
                                    <span class="badge bg-@(item.Estado ? "success" : "secondary")">
                                        @(item.Estado ? "Activo" : "Inactivo")
                                    </span>
                                </td>
                                <td>@item.Usuario?.UserName</td>
                                <td>@item.FechaRegistro.ToString("dd/MM/yyyy HH:mm")</td>
                                <td class="text-end">
                                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-secondary me-1">
                                        <i class="bi bi-pencil"></i>
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger">
                                        <i class="bi bi-trash"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    }
</div>
