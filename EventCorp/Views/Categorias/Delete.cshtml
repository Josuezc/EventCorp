@model EventCorp.Models.Categoria
@{
    ViewData["Title"] = "Eliminar categoría";
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm border-danger">
                <div class="card-header bg-danger text-white">
                    <h5 class="mb-0">Confirmar eliminación</h5>
                </div>
                <div class="card-body">
                    <p class="mb-4">¿Está seguro de que desea eliminar esta categoría?</p>

                    <ul class="list-group mb-4">
                        <li class="list-group-item"><strong>Nombre:</strong> @Model.Nombre</li>
                        <li class="list-group-item"><strong>Descripción:</strong> @Model.Descripcion</li>
                        <li class="list-group-item"><strong>Estado:</strong> @(Model.Estado ? "Activo" : "Inactivo")</li>
                    </ul>

                    <form asp-action="DeleteConfirmed">
                        <input type="hidden" asp-for="Id" />
                        <button type="submit" class="btn btn-danger">Eliminar</button>
                        <a asp-action="Index" class="btn btn-outline-secondary ms-2">Cancelar</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
